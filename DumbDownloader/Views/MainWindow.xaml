<Window x:Class="DumbDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DumbDownloader"
        mc:Ignorable="d"
        Title="DumbDownloader" Height="480" Width="640">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/MainResources.xaml" />
    </Window.Resources>
    
    <DockPanel>
        <!--메뉴바-->
        <DockPanel DockPanel.Dock="Top" KeyboardNavigation.TabNavigation="None">
            <Menu KeyboardNavigation.TabNavigation="Cycle">
                <MenuItem Header="로그인">
                    <MenuItem Header="로그인" Command="{Binding Path=CloseCommand}" />
                    <MenuItem Header="종료" Command="{Binding Path=CloseCommand}" />
                </MenuItem>
                <MenuItem Header="옵션">
                    <MenuItem Header="옵션" Command="{Binding Path=CloseCommand}" />
                </MenuItem>
                <MenuItem Header="_Help" />
            </Menu>            
        </DockPanel>
        
        <!--툴바-->
        <DockPanel DockPanel.Dock="Top" KeyboardNavigation.TabNavigation="None">
            <ToolBarTray>
                <ToolBar Band="1" BandIndex="1" >
                    <CheckBox>test</CheckBox>
                    <CheckBox>test</CheckBox>
                    <CheckBox>test</CheckBox>
                    <TextBlock>다운로드 시간</TextBlock>
                    <TextBox>Test</TextBox>
                </ToolBar>
            </ToolBarTray>
        </DockPanel>

        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--등록 주식 리스트-->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource MainBorderStyle}" Width="170">
                </Border>

                <!--선택된 주식의 데이터베이스 최근 20개-->
                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource MainBorderStyle}">
                </Border>
            </Grid>

            <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource MainBorderStyle}">
                
            </Border>
        </Grid>
    </DockPanel>
</Window>
